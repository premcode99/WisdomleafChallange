<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/margin_20dp"
    android:paddingRight="@dimen/margin_20dp"
    android:paddingBottom="@dimen/margin_10dp"
    android:paddingTop="@dimen/margin_10dp">

    <ImageView
        android:id="@+id/imageview_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

    </ImageView>

    <TextView
        android:id="@+id/image_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Loading"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/imageview_item"
        app:layout_constraintTop_toTopOf="@id/imageview_item"
        app:layout_constraintStart_toStartOf="@id/imageview_item"
        app:layout_constraintEnd_toEndOf="@id/imageview_item"
        android:textSize="@dimen/font_body_extra_small"
        >

    </TextView>

    <TextView
        android:id="@+id/title_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:layout_marginStart="@dimen/margin_10dp"
        app:layout_constraintStart_toEndOf="@id/imageview_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/font_body"
        >

    </TextView>

    <TextView
        android:id="@+id/description_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/title_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_item"
        android:textSize="@dimen/font_body_medium"
        >

    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="@id/imageview_item"
        app:layout_constraintEnd_toEndOf="@id/description_item"
        android:layout_marginEnd="@dimen/margin_20dp"
        app:layout_constraintTop_toBottomOf="@id/imageview_item"
        >

    </View>


</androidx.constraintlayout.widget.ConstraintLayout>