<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textSize">@dimen/font_body</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/avoice_options_menu_text</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <!--EditText hint color-->
        <item name="android:textColorHint">@color/black</item>

    </style>

    <style name="avoice_options_menu_text">
        <item name="android:textColorHint">#008ECF</item>
        <item name="android:textSize">@dimen/font_body_small</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>




</resources>

